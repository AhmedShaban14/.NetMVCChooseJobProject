@model IEnumerable<TemplateProject.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>List Of Categories</h2>

<table class="table table-hover table-striped">
    <tr>
        <td>
            @Html.DisplayNameFor(x => x.Name)
        </td>
        <td>
            @Html.DisplayNameFor(x => x.catDescription)
        </td>
        <td></td>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Name)</td>
                <td>@Html.DisplayFor(x=>item.catDescription)</td>
                <td>
                    @Html.ActionLink("Edit Category", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Details Category", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete Category", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
            
        }
</table>
 <!-- Button trigger modal -->
<button class="btn btn-primary" onclick="showModal()" data-toggle="modal" data-target="#myModal">
    Create New Category</button>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
         
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
    })
    var showModal = function () {
        debugger
        url = "/Category/Create";
        $("#modalBody").load(url, function () {
            alert("donee");
        })
    }
</script>

